{
  "extends": "@bv/typescript-config/base.json",
  "compilerOptions": {
    /* Next.js Specific */
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./app/components/*"
      ],
      "@lib/*": [
        "./app/lib/*"
      ],
      "@types/*": [
        "./app/types/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "payload.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
