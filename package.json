{
  "name": "bal-vihar-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "apps/website/**/*.{ts,tsx}": "cd apps/website && bun run lint",
    "apps/studio/**/*.{ts,tsx}": "cd apps/studio && bun run lint",
    "*.{ts,tsx,css,md}": "prettier --write"
  }
}